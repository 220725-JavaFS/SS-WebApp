<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>WebApp</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet>
  <servlet-name>MonstersController</servlet-name>
  <servlet-class>com.revature.controllers.MonstersController</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>MonstersController</servlet-name>
  <url-pattern>/monsters/*</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
  <servlet-name>ForRedrController</servlet-name>
  <servlet-class>com.revature.controllers.ForRedrController</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>ForRedrController</servlet-name>
  <url-pattern>/fr</url-pattern>
  </servlet-mapping>
</web-app>